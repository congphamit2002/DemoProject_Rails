<%= link_to "Thêm mới", new_admin_category_path, class: "btn btn-success mx-5 my-3" %>
<table class="table align-middle mb-0 bg-white text-center">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class='col-4'>
          <p class="fw-normal mb-1"><%= category.name %></p>
        </td>
        <td class='col-4'>
          <div class="d-flex align-items-center justify-content-center">
            <img
                src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                alt=""
                style="width: 45px; height: 45px"
                class="rounded-circle"
                />
          </div>
        </td>
        <td class='col-4'>
          <%= link_to "Edit", edit_admin_category_path(category) , class: "btn btn-link btn-sm btn-rounded" %>

          <%= link_to "Delete", admin_category_path(category), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure"
          }, class: "btn btn-link btn-sm btn-rounded" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>