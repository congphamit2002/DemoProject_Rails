<section class="h-100 py-5" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">SIGN UP</p>

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mx-1 mx md-4") do |f| %>
                    <% error_hash = {}; resource.errors.each {|error| error_hash[error.attribute] = error.full_message } %>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Your First Name", class: "form-label" %>
                        <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
                        <%= f.label error_hash[:first_name], class: "label text-danger mt-1" if error_hash.include?(:first_name) %>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Your last name", class: "form-label" %>
                        <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
                        <%= f.label error_hash[:last_name], class: "label text-danger mt-1" if error_hash.include?(:last_name) %>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Your Email", class: "form-label"%>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
                        <%= f.label error_hash[:email], class: "label text-danger mt-1" if error_hash.include?(:email) %>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Password", class: "form-label"%>
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control",placeholder: "Enter your password" %>
                        <%= f.label error_hash[:password], class: "label text-danger mt-1" if error_hash.include?(:password) %>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Repeat your password", class: "form-label"%>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat your password" %>
                        <%= f.label error_hash[:password_confirmation], class: "label text-danger mt-1" if error_hash.include?(:password_confirmation) %>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <div class="d-flex flex-row align-items-center col-8">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.label "Phone", class: "form-label" %>
                          <%= f.text_field :phone, class: "form-control", placeholder: "Enter your phone"  %>
                          <%= f.label error_hash[:phone], class: "label text-danger mt-1" if error_hash.include?(:phone)%>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center col-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.label "Gender", class: "form-label" %>
                          <%= f.select(:gender, User.genders.keys.map { |key| [key.capitalize, key] },
                              { include_blank: "Gender" }, class: 'form-control') %>
                            <%= f.label error_hash[:gender], class: "label text-danger mt-1" if error_hash.include?(:gender)%>
                        </div>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Address", class: "form-label" %>
                        <%= f.text_field :address, class: "form-control", placeholder: "Enter your address" %>
                        <%= f.label error_hash[:address], class: "label text-danger mt-1" if error_hash.include?(:address) %>
                      </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit "Sign up", class: "btn btn-primary btn-lg col-6" %>
                    </div>

                    <p class="text-center text-muted mt-5 mb-0">Have already an account?
                        <%= link_to "Login here",  new_session_path(resource_name), class: "fw-bold text-body" %></p>
                  <% end %>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-6 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>