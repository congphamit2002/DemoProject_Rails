<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">CHANGE PASSWORD</p>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= f.hidden_field :reset_password_token %>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Password", class: "form-label"%>
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control",placeholder: "Enter your password" %>
                        <% resource.errors.full_messages_for(:password).each do |message| %>
                          <%= f.label message, class: "label text-danger mt-1"%>
                        <% end %>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Repeat your password", class: "form-label"%>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat your password" %>
                        <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                          <%= f.label message, class: "label text-danger mt-1"%>
                        <% end %>
                      </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit "Change password", class: "btn btn-primary btn-lg col-6" %>
                    </div>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>