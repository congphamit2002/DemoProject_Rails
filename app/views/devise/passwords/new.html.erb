<div class="container d-flex align-items-center justify-content-center">
  <div class="card text-center" style="width: 400px;">
      <div class="card-header h5 text-white bg-primary">Password Reset</div>
      <div class="card-body px-5">
          <p class="card-text py-2">
              Enter your email address and we'll send you an email with instructions to reset your password.
          </p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <% error_hash = {}; resource.errors.each {|error| error_hash[error.attribute] = error.full_message } %>
            <div class="form-outline mb-2">
              <%= f.label "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
            </div>

            <%= f.label error_hash[:email], class: "label text-danger" if error_hash.include?(:email) %>
            <%= f.submit "Send reset password", class: "btn btn-primary w-100 mt-2" %>
          <% end %>
          <div class="d-flex justify-content-between mt-4">
              <%= link_to "Sign in",  new_session_path(resource_name) %>
              <%= link_to "Sign up",  new_registration_path(resource_name) %>
          </div>
      </div>
  </div>
</div>
