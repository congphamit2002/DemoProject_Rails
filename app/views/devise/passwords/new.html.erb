<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-6 col-xl-6">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-10 col-xl-10 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Password Reset</p>
                <p class="card-text py-2">
                  Enter your email address and we'll send you an email with instructions to reset your password.
                </p>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <%# <i class="fas fa-lock fa-lg me-3 fa-fw"></i> %>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label "Email", class: "form-label" %>
                        <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
                      </div>
                    </div>

                    <% resource.errors.full_messages_for(:email).each do |message| %>
                      <%= f.label message, class: "label text-danger mt-1"%>
                    <% end %>

                    <div class="d-flex justify-content-center mb-3 mb-lg-4">
                      <%= f.submit "Send reset password", class: "btn btn-primary btn-lg col-6" %>
                    </div>
                  <% end %>
                  <div class="d-flex justify-content-between mt-4">
                    <%= link_to "Sign in",  new_session_path(resource_name) %>
                    <%= link_to "Sign up",  new_registration_path(resource_name) %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>