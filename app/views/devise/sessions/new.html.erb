<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= resource.errors.each do |error|%>
           <%= error.full_message%>
          <%end%>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.label "Email", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.label "Password", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
          </div>
          <%= f.label flash[:alert], class: "label text-danger mt-1 mb-3" if flash[:alert] %>
          <%= f.label flash[:notice], class: "label text-danger mt-1 mb-3" if flash[:notice] %>

          <div class="d-flex justify-content-between col-12 align-items-center mb-4">
            <!-- Checkbox -->
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input"%>
                  <%= f.label :remember_me, class:"form-check-label" %>
                </div>
              <% end %>
              <div>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              </div>
          </div>
          
          <%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block col-12" %>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

          <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
            role="button">
            <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
          </a>
          <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
            role="button">
            <i class="fab fa-twitter me-2"></i>Continue with Twitter</a>

        <% end %>
        <div class="mt-4 d-flex align-items-center justify-content-center">
          <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %> </p>
        </div>
      </div>
    </div>
  </div>
</section>